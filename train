Â  Â  Â  Â  function addAllTrainsToNetwork() {
Â  Â  Â  Â  Â  Â  const network = document.querySelector('.comprehensive-network');
Â  Â  Â  Â  Â  Â  
Â  Â  Â  Â  Â  Â  trains.forEach((train, index) => {
Â  Â  Â  Â  Â  Â  Â  Â  // Calculate initial position based on departure time
Â  Â  Â  Â  Â  Â  Â  Â  const currentTime = new Date();
Â  Â  Â  Â  Â  Â  Â  Â  const departureTime = new Date(`2025-09-16 ${train.departure}`);
Â  Â  Â  Â  Â  Â  Â  Â  const arrivalTime = new Date(`2025-09-16 ${train.arrival}`);
Â  Â  Â  Â  Â  Â  Â  Â  
Â  Â  Â  Â  Â  Â  Â  Â  const totalJourney = arrivalTime - departureTime;
Â  Â  Â  Â  Â  Â  Â  Â  const elapsed = Math.max(0, currentTime - departureTime);
Â  Â  Â  Â  Â  Â  Â  Â  const progress = Math.min(1, elapsed / totalJourney);
Â  Â  Â  Â  Â  Â  Â  Â  
Â  Â  Â  Â  Â  Â  Â  Â  // Position calculation (0 to 1200px across the network)
Â  Â  Â  Â  Â  Â  Â  Â  let xPosition = 50 + (progress * 1150);
Â  Â  Â  Â  Â  Â  Â  Â  
Â  Â  Â  Â  Â  Â  Â  Â  // Add some random variation for different tracks
Â  Â  Â  Â  Â  Â  Â  Â  const trackOffset = (index % 5) * 20; // Different tracks
Â  Â  Â  Â  Â  Â  Â  Â  const yPosition = 195 + trackOffset;
Â  Â  Â  Â  Â  Â  Â  Â  
Â  Â  Â  Â  Â  Â  Â  Â  // Determine train color based on type
Â  Â  Â  Â  Â  Â  Â  Â  let trainColor;
Â  Â  Â  Â  Â  Â  Â  Â  switch(train.type) {
Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  case 'Superfast': trainColor = 'linear-gradient(135deg, #f39c12, #d68910)'; break;
Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  case 'Express': trainColor = 'linear-gradient(135deg, #3498db, #2980b9)'; break;
Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  case 'Mail': 
Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  case 'Passenger': trainColor = 'linear-gradient(135deg, #27ae60, #229954)'; break;
Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  case 'Goods': trainColor = 'linear-gradient(135deg, #8e44ad, #732d91)'; break;
Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  default: trainColor = 'linear-gradient(135deg, #95a5a6, #7f8c8d)';
Â  Â  Â  Â  Â  Â  Â  Â  }
Â  Â  Â  Â  Â  Â  Â  Â  
Â  Â  Â  Â  Â  Â  Â  Â  const trainElement = document.createElement('div');
Â  Â  Â  Â  Â  Â  Â  Â  trainElement.className = 'animated-train';
Â  Â  Â  Â  Â  Â  Â  Â  trainElement.id = `network-train-${train.id}`;
Â  Â  Â  Â  Â  Â  Â  Â  trainElement.style.cssText = `
Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  left: ${xPosition}px;
Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  top: ${yPosition}px;
Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  background: ${trainColor};
Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  width: ${train.type === 'Goods' ? '60px' : '50px'};
Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  height: 25px;
Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  z-index: ${10 + (5 - train.priority)};
Â  Â  Â  Â  Â  Â  Â  Â  `;
Â  Â  Â  Â  Â  Â  Â  Â  trainElement.textContent = train.id;
Â  Â  Â  Â  Â  Â  Â  Â  
Â  Â  Â  Â  Â  Â  Â  Â  // Add hover tooltip
Â  Â  Â  Â  Â  Â  Â  Â  trainElement.addEventListener('mouseenter', (e) => showTrainTooltip(e, train));
Â  Â  Â  Â  Â  Â  Â  Â  trainElement.addEventListener('mouseleave', hideTrainTooltip);
Â  Â  Â  Â  Â  Â  Â  Â  trainElement.addEventListener('mousemove', moveTrainTooltip);
Â  Â  Â  Â  Â  Â  Â  Â  
Â  Â  Â  Â  Â  Â  Â  Â  network.appendChild(trainElement);
Â  Â  Â  Â  Â  Â  Â  Â  
Â  Â  Â  Â  Â  Â  Â  Â  // Start animation
Â  Â  Â  Â  Â  Â  Â  Â  animateNetworkTrain(trainElement, train, progress);
Â  Â  Â  Â  Â  Â  });
Â  Â  Â  Â  }

Â  Â  Â  Â  function animateNetworkTrain(trainElement, train, initialProgress) {
Â  Â  Â  Â  Â  Â  const totalDuration = (new Date(`2025-09-16 ${train.arrival}`) - new Date(`2025-09-16 ${train.departure}`));
Â  Â  Â  Â  Â  Â  const startTime = Date.now() - (totalDuration * initialProgress);

Â  Â  Â  Â  Â  Â  function animate() {
Â  Â  Â  Â  Â  Â  Â  Â  const currentTime = Date.now();
Â  Â  Â  Â  Â  Â  Â  Â  const elapsedTime = currentTime - startTime;
