Â  Â  Â  Â  function updateScheduleMetrics(revisedTrains) {
Â  Â  Â  Â  Â  Â  const affectedCount = revisedTrains.filter(t => t.delay !== 0).length;
Â  Â  Â  Â  Â  Â  const averageDelay = revisedTrains.reduce((sum, t) => sum + Math.abs(t.delay), 0) / revisedTrains.length;
Â  Â  Â  Â  Â  Â  const delayReduction = Math.max(0, 15 - averageDelay); // Assuming 15 min was previous average
Â  Â  Â  Â  Â  Â  const efficiency = Math.min(100, Math.max(0, 100 - averageDelay * 2));
Â  Â  Â  Â  Â  Â  
Â  Â  Â  Â  Â  Â  document.getElementById('affectedTrains').textContent = affectedCount;
Â  Â  Â  Â  Â  Â  document.getElementById('delayReduction').textContent = Math.round(delayReduction * 10) / 10;
Â  Â  Â  Â  Â  Â  document.getElementById('efficiency').textContent = Math.round(efficiency);
Â  Â  Â  Â  }

