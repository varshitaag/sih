Â  Â  Â  Â  function renderRailwayNetwork() {
Â  Â  Â  Â  Â  Â  const network = document.getElementById('railwayNetwork');
Â  Â  Â  Â  Â  Â  network.innerHTML = '';
Â  Â  Â  Â  Â  Â  const trackHeight = 15;
Â  Â  Â  Â  Â  Â  const startY = 200;
Â  Â  Â  Â  Â  Â  
Â  Â  Â  Â  Â  Â  const totalDistance = stations[stations.length - 1].distance;
Â  Â  Â  Â  Â  Â  
Â  Â  Â  Â  Â  Â  stations.forEach(station => {
Â  Â  Â  Â  Â  Â  Â  Â  const xPos = (station.distance / totalDistance) * 1100;
Â  Â  Â  Â  Â  Â  Â  Â  
Â  Â  Â  Â  Â  Â  Â  Â  const stationNode = document.createElement('div');
Â  Â  Â  Â  Â  Â  Â  Â  stationNode.className = 'station-node';
Â  Â  Â  Â  Â  Â  Â  Â  stationNode.style.left = `${xPos}px`;
Â  Â  Â  Â  Â  Â  Â  Â  stationNode.style.top = `${startY}px`;
Â  Â  Â  Â  Â  Â  Â  Â  stationNode.innerHTML = `
Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  <div class="station-code">${station.code}</div>
Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  <div class="station-name">${station.name}</div>
Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  <div class="station-info">${station.distance} km</div>
Â  Â  Â  Â  Â  Â  Â  Â  `;
Â  Â  Â  Â  Â  Â  Â  Â  network.appendChild(stationNode);
Â  Â  Â  Â  Â  Â  });
Â  Â  Â  Â  Â  Â  
Â  Â  Â  Â  Â  Â  // Draw tracks
Â  Â  Â  Â  Â  Â  for (let i = 0; i < stations.length - 1; i++) {
Â  Â  Â  Â  Â  Â  Â  Â  const startX = (stations[i].distance / totalDistance) * 1100 + 60;
Â  Â  Â  Â  Â  Â  Â  Â  const endX = (stations[i+1].distance / totalDistance) * 1100 + 60;
Â  Â  Â  Â  Â  Â  Â  Â  const trackLength = endX - startX;
Â  Â  Â  Â  Â  Â  Â  Â  
Â  Â  Â  Â  Â  Â  Â  Â  const numTracks = Math.min(4, stations[i].tracks);
Â  Â  Â  Â  Â  Â  Â  Â  for (let t = 0; t < numTracks; t++) {
Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  const trackLine = document.createElement('div');
Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  trackLine.className = 'track-line';
Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  trackLine.style.left = `${startX}px`;
Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  trackLine.style.top = `${startY + (t+1)*trackHeight}px`;
Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  trackLine.style.width = `${trackLength}px`;
Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  network.appendChild(trackLine);
Â  Â  Â  Â  Â  Â  Â  Â  }
Â  Â  Â  Â  Â  Â  }
Â  Â  Â  Â  }

